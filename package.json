{
  "name": "gardening-product-scanner",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.11.0",
    "fuse.js": "^7.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start:frontend": "react-scripts start",
    "start:server": "node server/index.js",
    "dev:server": "nodemon server/index.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run start:frontend\"",

    "postinstall": "npm --prefix server install",

    "start": "node server/index.js",
    "build": "react-scripts build",

    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:mobile": "react-scripts build && npx cap copy",
    "open:android": "npm run build:mobile && npx cap open android",
    "open:ios": "npm run build:mobile && npx cap open ios"
  },
  "eslintConfig": {
    "extends": ["react-app", "react-app/jest"]
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18"
  }
}
